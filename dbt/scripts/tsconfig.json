{
  "extends": "../../packages/config/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../apps/web/*"],
      "@packages/db": ["../../packages/db/src/index.ts"],
      "@packages/db/*": ["../../packages/db/src/*"],
      "@packages/*": ["../../packages/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
